generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Bookmaker {
  key     String
  markets Market[]
  title   String
}

type Market {
  key         String
  last_update String
  outcomes    Outcome[]
}

type Outcome {
  description String
  name        String
  point       Float
  price       Int
}

model events {
  id            String             @id @map("_id")
  away_team     String
  bookmakers    Bookmaker[]
  commence_time String
  home_team     String
  sport_key     String
  sport_title   String
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  teamName String @unique
  email String @unique
  password String
  hashedPassword String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  team Team?  
}

model Team {
  id  String    @id @default(auto()) @map("_id") @db.ObjectId 
  name String @unique
  bankroll Int
  bets Bet[]
  user User @relation(fields: [id], references: [id])
}

model Bet {
  id String @id @default(auto()) @map("_id") @db.ObjectId 
  size Int
  edge String
  over Boolean
  odds Int
  points Float
  player String
  teamName String
  createdAt DateTime @default(now())
  team Team @relation(fields: [teamName], references: [name])
}
